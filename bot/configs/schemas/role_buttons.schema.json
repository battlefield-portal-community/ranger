{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/battlefield-portal-community/ranger/main/bot/configs/schemas/role_buttons.schema.json",
  "title": "Role Buttons Config",
  "description": "Config Schema for defining Roles Button Config",
  "type": "object",
  "properties": {
    "channels": {
      "title": "Channels",
      "description": "List of channels",
      "type": "array",
      "format": "tabs",
      "items": {
        "headerTemplate": "{{self.name}}",
        "type": "object",
        "title": "Channel",
        "properties": {
          "saveConfigButton": {
            "type": "button",
            "title": "Save Config",
            "propertyOrder": 1,
            "options": {
              "button": {
                "action": "saveConfig",
                "validated": true
              }
            }
          },
          "id": {
            "type": "string",
            "pattern": "^[0-9]{18}$",
            "title": "Channel ID",
            "description": "ID of the channel to post react buttons in",
            "propertyOrder": 2
          },
          "name": {
            "type": "string",
            "title": "Channel Name",
            "options": {
              "hidden": true
            }
          },
          "groups": {
            "title": "Groups",
            "type": "array",
            "format": "tabs-top",
            "items": {

              "headerTemplate": "{{self.group_name}}",
              "type": "object",
              "title": "Group",
              "properties": {
                "group_name": {
                  "type": "string",
                  "title": "Group  Name"
                },
                "disabled": {
                  "title": "should this group be disabled",
                  "default": false,
                  "type": "boolean",
                  "format": "checkbox"
                },
                "message": {
                  "$ref": "http://0.0.0.0:5000/raw/configs/schema?config=definitions#/definitions/message"
                }
              },
              "required": [
                "group_name"
              ]
            },
            "additionalProperties": false,
            "minItems": 1,
            "maxItems": 25,
            "options": {
              "collapsed": true
            }
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "goHomePageButton": {
      "type": "button",
      "title": "Home",
      "propertyOrder": 1,
      "options": {
        "button": {
          "action": "goHomePage"
        }
      }
    }
  },
  "additionalProperties": false,
  "minProperties": 1
}